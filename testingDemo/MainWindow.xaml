<Window x:Class="testingDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testingDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="221*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="box" HorizontalAlignment="Left" Margin="23,0,0,388" VerticalAlignment="Bottom" Width="191" SelectionChanged="Box_SelectionChanged" Grid.ColumnSpan="2" Height="22">
            <ListBoxItem Content="Комплексы"/>
            <ListBoxItem Content="Дома"/>
            <ListBoxItem Content="Квартиры"/>
        </ComboBox>
        <DataGrid x:Name="grid" Height="372" Margin="12,37,8,0" VerticalAlignment="Top" Grid.ColumnSpan="2">

        </DataGrid>
        <Button x:Name="MenuButton" Content="Выход" Grid.Column="1" HorizontalAlignment="Left" Margin="566,7,0,0" VerticalAlignment="Top" Width="75" Height="22" Click="MenuButton_Click"/>
    </Grid>
</Window>
